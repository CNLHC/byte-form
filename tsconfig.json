{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution":"node",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "removeComments": true,
    "jsx": "react",
    "esModuleInterop":true,
    "lib": ["dom", "dom.iterable", "es2017"],
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}